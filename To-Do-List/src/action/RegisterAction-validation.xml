<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
  		
 <validators>
	<field name="username">  
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Username is mandatory</message>
		</field-validator>
	</field>

	<field name="fname">
		<field-validator type="regex">  
        	<param name="response">[A-Z,a-z]</param>  
        	<message>Name in alphabets only</message>  
        </field-validator>  


	 	<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Name is mandatory</message>
		</field-validator>
    </field>   

	<field name="lname">
		<field-validator type="regex">  
        	<param name="response">[A-Z,a-z]</param>  
        	<message>Name in alphabets only</message>  
        </field-validator>  
    </field>
    
	<field name="dob">
	    <field-validator type="regex">
	        <param name="response">[0-9,/]</param>
	        <message>Date should be in the given format only</message>
	    </field-validator>
	</field>
	
	<field name="password">  
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Password is mandatory</message>
		</field-validator>
	</field>
	
	<field name="confirmPassword">  
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>COnfirm your password</message>
		</field-validator>
	</field>
	
	<field name="secretQuestion">  
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Question is mandatory</message>
		</field-validator>
	</field>
	
	<field name="secretAnswer">  
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Answer is mandatory</message>
		</field-validator>
	</field>
	
	</validators>
	